@model IEnumerable<PGR.LEX.Models.TEstadosxAudiencia>

@{
    ViewBag.Title = "Estados por audiencia";
}

<h2>Estados por audiencia</h2>
<br />

<table class="table table-striped table-hover table-sm-responsive">
    <thead class="encabezadoTabla">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.idEstado }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idEstado }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idEstado })
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.ActionLink(" AGREGAR", "Create", "EstadosxAudiencia", new object { }, new { @class = "btn boton fa fa-plus", title = "Agregar un estado de audiencia" })
