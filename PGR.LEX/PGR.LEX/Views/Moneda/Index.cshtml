@model IEnumerable<PGR.LEX.Models.TMoneda>

@{
    ViewBag.Title = "Tipo Moneda";
}

<h2>Moneda</h2>

<br />


<table class="table table-striped table-hover">
    <thead class="encabezadoTabla">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idMoneda)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                Modificar
            </th>
            <th>
                Eliminar
            </th>
            <th>
                Ver detalles
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idMoneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.idMoneda }) 
              

            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idMoneda })
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.idMoneda })
            </td>
        </tr>
        }
    </tbody>

</table>



@Html.ActionLink("Agregar", "Create", "Moneda", new object { }, new { @class = "btn boton" })




