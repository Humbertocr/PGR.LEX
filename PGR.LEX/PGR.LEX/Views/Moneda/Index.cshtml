@model IEnumerable<PGR.LEX.Models.TMoneda>

@{
    ViewBag.Title = "Tipo Moneda";
}

<h2>Moneda</h2>

<br />


<table class="table table-striped table-hover table-sm-responsive">
    <thead class="encabezadoTabla">

        <tr>
            

            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                Acciones
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>

                    @Html.ActionLink("Modificar", "Edit", new { id = item.idMoneda }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idMoneda }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idMoneda })

                    @*@Html.ActionLink(
                   "Eliminar",
                   "Borrar",
                   new { id = item.idMoneda },
                   new { onclick = "return confirm('¿Está seguro que desea eliminar este registro?');" })*@
                   
                </td>


            </tr>
        }
    </tbody>

</table>

<br />

