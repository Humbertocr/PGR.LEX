@model IEnumerable<PGR.LEX.Models.TTipo>

@{
    ViewBag.Title = "Tipo";
}

<h2>Tipo</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idTipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TMateria.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idTipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TMateria.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idTipo }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idTipo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idTipo })
        </td>
    </tr>
    }

</table>


<p>
    @Html.ActionLink("Agregar", "Create")
</p>
