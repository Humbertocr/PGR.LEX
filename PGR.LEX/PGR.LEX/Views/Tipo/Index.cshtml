@model IEnumerable<PGR.LEX.Models.TTipo>

@{
    ViewBag.Title = "Tipo";
}

<h2>Tipo</h2>
<br />

<table class="table table-striped table-hover table-sm-responsive">
    <thead class="encabezadoTabla">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TMateria.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TMateria.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.idTipo }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idTipo }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idTipo })
                </td>
            </tr>
        }
    </tbody>

</table>


<p>
    @Html.ActionLink(" AGREGAR", "Create", "Tipo", new object { }, new { @class = "btn boton fa fa-plus", title = "Agregar un nuevo tipo de proceso" })
  
</p>
