@model PGR.LEX.Models.TTiposNegociacion

@{
    ViewBag.Title = "Modificar el tipo de negociación";
}

<h2>Modificar el tipo de negociaci&oacute;n</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
