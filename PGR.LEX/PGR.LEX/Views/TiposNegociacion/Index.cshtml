@model IEnumerable<PGR.LEX.Models.TTiposNegociacion>

@{
    ViewBag.Title = "Tipo de negociación";
}

<h2>Tipo de negociación</h2>
<br />

<table class="table table-striped table-hover table-sm-responsive">
    <thead class="encabezadoTabla">
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
              
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Tipo_Negociacion }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Tipo_Negociacion }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Tipo_Negociacion })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
   

    @Html.ActionLink(" AGREGAR", "Create", "TiposNegociacion", new object { }, new { @class = "btn boton fa fa-plus", title = "Agregar un tipo de negociación" })
</p>
